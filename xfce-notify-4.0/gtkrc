    GtkWidget::link-color = "#AFBBC4"


    fg[NORMAL] = "#8897A6"
    fg[PRELIGHT] = "#8897A6"
    fg[ACTIVE] = "#8897A6"

    engine "murrine" {
        textstyle = 0
    }
}

