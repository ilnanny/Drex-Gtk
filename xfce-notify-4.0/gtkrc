    font_name = "Bold"
}

style "notify-progressbar" {
    xthickness   = 1
    ythickness   = 1

    bg[NORMAL]   = "#eeeeee"
	bg[ACTIVE] = "#475966"
    bg[SELECTED] = "#eeeeee"

    fg[PRELIGHT] = "#35434C"
    fg[ACTIVE] = "#8897A6"
